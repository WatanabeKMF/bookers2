<div class= "container">
  <div class="row">
    <div class= "col-md-3">
      <%= render 'user_list', user: @user, book: @book %>
    </div>

    <!-- UsersIndex -->
    <div class= "col-md-8 offset-md-1">
      <table class="table">
        <h1>Users</h1>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to user_path(user.id) do %>
                  <%= image_tag user.get_profile_image(100,100) %>
                <% end %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to"Show", user_path(user.id) %></td>
            </tr> 
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>