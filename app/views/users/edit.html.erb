<main>
  <div class ="container">
    <div class ="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <!--バリデーションエラー表記 -->
        <% if @user.errors.any? %>
          <%= @user.errors.count %>error prohibited this obj from being saved: %>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

        <%= form_with model: @user do |f| %>
          <div class ="form-group">
            <label for="inputName">Name</label>
            <div class><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></div>
          </div>
          <div class ="form-group">
            <label for="inputImage">Image</label>
            <div class><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></div>
          </div>
          <div class ="form-group">
            <label for="inputIntroduction">Introduction</label>
            <div class><%= f.text_area :introduction, id:"inputIntroduction", placeholder:""%></div>
          </div>
          <div><%= f.submit "Update User" ,class:"btn btn-secondary" %></div>
        <% end %>
      </div>
    </div>
  </div>
</main>