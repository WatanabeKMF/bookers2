<h1>Editing Book</h1>

<!--バリデーションエラー表記 -->
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved: %>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"名前"%>
  <label for="inputOpinion">Opinion</label>
  <%= f.text_area :body,  autofocus: true, id:"inputOpinion", placeholder: "感想" %>  
  <%= f.submit "Update Book" %>
<% end %>

<p>
  <%= link_to"Show", book_path(@book.id) %>
  |
  <%= link_to"Back", books_path(@books) %>
</p>